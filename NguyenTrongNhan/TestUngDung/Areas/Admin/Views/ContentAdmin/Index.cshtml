@model PagedList.IPagedList<ModelEF.Model.Content>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý tin tức</h2>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách tin tức</strong>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "ContentAdmin", FormMethod.Get))
                        {

                            <div class="row form-group">
                                <div class="col-lg-12">

                                    <div class="col-md-6">
                                        <div class="form-inline">
                                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên tin tức" />
                                            <button type="submit" class="btn btn-warning" style="margin-left:20px">Tìm kiếm</button>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="col-md-6">
                                        <a class="btn btn-success" href="/Admin/ContentAdmin/Create">Thêm mới</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Miêu tả</th>
                                        <th>Ngày đăng</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.CreatedDate</td>
                                            <td><a href="#" class="btn-active1" data-id="@item.ID">@Html.Raw(item.Status ? "<strong>Hiển thị </strong>" : "Ẩn")</a></td>
                                            <td>
                                                <a href="/Admin/Content/Edit/@item.ID">Chỉnh sửa</a>
                                                |
                                                @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                           {
                                               Confirm = "Bạn có muốn xoá bản ghi này?",
                                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                                               HttpMethod = "Delete"
                                           })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Assets/js/controller/contentController.js"></script>