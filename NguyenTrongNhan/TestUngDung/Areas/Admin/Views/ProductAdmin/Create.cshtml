@model ModelEF.Model.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới sản phẩm</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Nhập thông tin sản phẩm</strong>
            </div>


            <div class="card-body card-block">
                @using (Html.BeginForm("Create", "ProductAdmin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    </div>

                    <div class="row form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col col-md-3  form-control-label" })
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                    </div>

                    <div class="row form-group">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.TextBoxFor(model => model.Price, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                    </div>
                    
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.TextBoxFor(model => model.Quantity, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

                    </div>

                    <div class="row form-group">
                        @Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.DropDownListFor(model => model.CategoryID, null, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })

                    </div>

                    <div class="row form-group">
                        @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.TextBoxFor(model => model.Detail, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })

                    </div>

                   
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col col-md-3  form-control-label" })

                        @Html.CheckBoxFor(model => model.Status, new { htmlAttributes = new { @class = "col-12 col-md-9 form-control" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                    </div>

                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Tạo mới" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Trở về", "Index")
</div>