@model PagedList.IPagedList<ModelEF.Model.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý sản phẩm</h2>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách sản phẩm</strong>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "ProductAdmin", FormMethod.Get))
                        {

                            @*<div class="form-inline">
                                    <form class="search-form">
                                        <input class="form-control mr-sm-2" type="text" placeholder="Tìm kiếm ..." aria-label="Search" value="@ViewBag.SearchString">
                                        <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                                    </form>
                                </div>*@

                            <div class="row form-group">
                                <div class="col-lg-12">

                                    <div class="col-md-6">
                                        <div class="form-inline">
                                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên sản phẩm" />
                                            <button type="submit" class="btn btn-warning" style="margin-left:20px">Tìm kiếm</button>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="col-md-6">
                                        <a class="btn btn-success" href="/Admin/ProductAdmin/Create">Thêm mới</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Loại SP _ ID</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">
                                            <td>@item.ID </td>
                                            <td>@item.Name </td>
                                            <td>@item.Price</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.CategoryID</td>
                                            <td>
                                                <a href="/Admin/ProductAdmin/Detail/@item.ID">Xem chi tiết</a>
                                                |
                                                <a href="/Admin/ProductAdmin/Edit/@item.ID">Chỉnh sửa</a>
                                                |

                                                @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                                {
                                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                HttpMethod = "Delete"
                                                 })

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>