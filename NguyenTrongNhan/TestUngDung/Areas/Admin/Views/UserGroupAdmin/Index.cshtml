@model PagedList.IPagedList<ModelEF.Model.UserGroup>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý nhóm người dùng</h2>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách nhóm người dùng</strong>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "UserGroupAdmin", FormMethod.Get))
                        {

                            <div class="row form-group">
                                <div class="col-lg-12">

                                    <div class="col-md-6">
                                        <div class="form-inline">
                                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập tên nhóm người dùng" />
                                            <button type="submit" class="btn btn-warning" style="margin-left:20px">Tìm kiếm</button>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="col-md-6">
                                        <a class="btn btn-success" href="/Admin/UserGroupAdmin/Create">Thêm mới</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên nhóm người dùng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a href="/Admin/UserAdmin/Edit/@item.ID">Chỉnh sửa</a>
                                            |
                                            @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xoá bản ghi này?",
                                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                                                        
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>